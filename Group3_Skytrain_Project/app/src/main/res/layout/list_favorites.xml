<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ToggleButton
            android:id="@+id/faveOnImgView"
            app:layout_constraintTop_toTopOf="@+id/faveImgView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="3dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:focusable="false"
            android:background="@drawable/toggle_btn_check"
            android:textOn=""
            android:textOff=""
            android:focusableInTouchMode="true"
            android:layout_centerVertical="false" />
        <ImageView
            android:src="@drawable/translink_nav_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/faveImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/faveImgView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <TextView
               android:id="@+id/faveCategory"
               android:padding="3dp"
               android:layout_margin="3dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/faveTitleTv"
                android:text="Title: Translink daily event"
                android:textSize="20dp"
                android:padding="3dp"
                android:background="#66424242"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>